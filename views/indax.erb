<div class="tweets">
  <% @tweets.each do |tweet| %>
    <div class="tweet" style="background-image: url(<%= tweet.image %>)">
      <div class="menu">
        <ul>
          <li><a href="/tweets/<%= tweet.id %>/edit">編集</a></li>
          <li><a href="/tweets/<%= tweet.id %>/delete">削除</a></li>
        </ul>
      </div>
      <p class="tweet-text"><%= tweet.text %></p>
    </div>
  <% end %>
</div>